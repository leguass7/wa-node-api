{
    "compilerOptions": {
      "declaration": true,
      "target": "ESNext",                          
      "module": "commonjs",                     
      "lib": ["es6"],                             
      "allowJs": true,                       
      "outDir": "./dist",                        
      "rootDir": "./src",                       
      "removeComments": false,                
      "typeRoots": [
        "./node_modules/@types",
        "./src/@types"
      ],                          
      "esModuleInterop": true,                  
      "resolveJsonModule": true,
      "experimentalDecorators": true,        
      "emitDecoratorMetadata": true,         
      "skipLibCheck": true,                     
      "forceConsistentCasingInFileNames": true,
      "noEmit": false,
      "baseUrl": ".",
      "paths": {
        "@helpers/*": ["./src/helpers/*"],
        "@interfaces/*": ["./src/interfaces/*"]
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "public",
      "docs"
    ]
  }